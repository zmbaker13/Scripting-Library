var grLegacy = new GlideRecord('u_legacy_workorders');
grLegacy.addEncodedQuery('u_customer.name=NULL');
grLegacy.setWorkflow(false);
grLegacy.queryNoDomain();
while (grLegacy.next()) {
		grLegacy.u_customer=grLegacy.u_equipid.u_account;
		grLegacy.update();
	}  
	

