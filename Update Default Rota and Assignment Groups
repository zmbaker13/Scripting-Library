	function updateDeptGroups(){
		var group = '21a7a71edb84db402aac77e9af96197a';
		var query = 'u_active=true^company.account_parent=4433fb8bdb323a003c9a7aa9bf96195a^u_on_call_rota.name=NULL';

		var grDeptGroup = new GlideRecord('cmn_department');
